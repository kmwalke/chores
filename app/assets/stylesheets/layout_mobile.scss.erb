@import 'variables';

@media screen and (max-width: $phone-width) {
  html {
    body {

      div.links {
        z-index: 100;

        div.hamburger, div.links-list {
          transition: opacity .35s, visibility .35s, width .35s;
        }

        div.hamburger {
          display: inline-block;

          span {
            display: block;
            font-weight: normal;
            clear: both;
            font-size: 4em;
            line-height: 0.2em;
          }
        }

        div.links-list {
          visibility: hidden;
          opacity: 0;
          position: fixed;
          top: 0;
          left: 0;
          width: 20%;
          height: 100%;
          background: lighten($black, 30%);
          border-right: 5px solid darken($brown, 20%);

          a {
            display: block;
            color: $white;
            font-size: xx-large;
          }

          a:visited {
            color: $white;
          }

          a:hover {
            text-decoration: underline;
          }
        }
      }

      div.links:focus, div.links:focus-within {
        div.links-list {
          visibility: visible;
          opacity: 1;
          width: 50%;
        }

      }

      div.field,
      div.actions {
        margin-bottom: 10px;
      }

      .notice {
        color: green;
      }

      .field_with_errors {
        padding: 2px;
        background-color: red;
        display: table;
      }

      #error_explanation {
        width: 450px;
        border: 2px solid red;
        padding: 7px 7px 0;
        margin-bottom: 20px;
        background-color: #f0f0f0;
      }

      #error_explanation h2 {
        text-align: left;
        font-weight: bold;
        padding: 5px 5px 5px 15px;
        font-size: 12px;
        margin: -7px -7px 0;
        background-color: #c00;
        color: #fff;
      }

      #error_explanation ul li {
        font-size: 12px;
        list-style: square;
      }

      label {
        display: block;
      }
    }
  }
}
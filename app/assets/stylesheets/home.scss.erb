@import 'variables';

body.home {
  div.content {
    width: 40em;
    border: 1px solid black;

    div.header {
      border-bottom: 1px solid black;

      div.user-badge {
        display: inline-block;
        width: 20%;
        height: 10em;
        vertical-align: top;

        span.avatar {
          font-size: 4em;
          display: inline-block;
          margin: 0.1em 0 0 0.1em;
          line-height: 1.7em;
          height: 1.7em;
          width: 1.4em;
          padding: 0 0 0 0.3em;
          background-color: $blue;
          color: $white;
          @include rounded-corners(1em);
          @include shadow(0, 0, 20px, $gold);
        }

        span.level {
          display: inline-block;
          position: absolute;
          left: 2.5em;
          top: 4em;
          padding: 0 0 0 .3em;
          width: 1.0em;
          height: 1.3em;
          line-height: 1.3em;
          font-size: 2em;
          background: $gold;
          border: 4px outset lighten($gold, 20%);
          @include rounded-corners(1em);
        }
      }

      div.level-info {
        display: inline-block;
        width: 75%;
        vertical-align: top;

        div.xp-bar {
          display: inline-block;
          background: $grey;
          width: 80%;
          height: 3em;
          margin: 2em 0 0 0.5em;

          div.xp-bar-fill {
            background: $green;
            height: 3em;
          }
        }

        div.xp-multiplier {
          display: inline-block;
        }

        div.next-reward {
          display: inline-block;
        }
      }
    }
  }
}

<!DOCTYPE html>
<html>
  <head>
    <title>Chores</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css2?family=Averia+Serif+Libre:wght@400;700&family=Courier+Prime:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
  </head>

  <body class="<%= controller.controller_name%>">

    <% if current_user %>
      <%= render partial: 'layouts/admin_links' %>
    <% end %>
    <p id=”notice”><%= notice %></p>

    <div class="content">
      <%= yield %>
    </div>

  </body>
</html>

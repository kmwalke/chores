<p id="notice"><%= notice %></p>

<h1>Permissions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permissions.each do |permission| %>
    <tr>
      <td><%= permission.name %></td>
        <td><%= permission.description %></td>
        <td><%= link_to 'Show', permission %></td>
        <td><%= link_to permission.name, edit_permission_path(permission) %></td>
        <td><%= link_to 'Destroy', permission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <td>
        <%= link_to 'X', permission_path(permission), method: :delete, id: "delete_#{permission.id}", data: {confirm: 'Are you sure?' } %>
        &nbsp;
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Permission', new_permission_path %>
